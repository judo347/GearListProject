<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="baseWithFXML.ui.AddItemController">
  <children>
      <VBox minHeight="-Infinity" minWidth="-Infinity" prefWidth="350.0" spacing="5.0">
         <children>
            <VBox spacing="2.0">
               <children>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Name of item" />
                <TextField fx:id="textFieldNameOfItem" />
               </children>
            </VBox>
            <VBox spacing="2.0">
               <children>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Weight in grams" />
                <TextField id="textField" fx:id="textFieldWeightInGrams" />
               </children>
            </VBox>
            <VBox spacing="2.0">
               <children>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Brand" />
                <TextField fx:id="textFieldBrand" />
               </children>
            </VBox>
            <VBox spacing="2.0">
               <children>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Model" />
                <TextField fx:id="textFieldModel" prefWidth="200.0" />
               </children>
            </VBox>
            <VBox spacing="2.0">
               <children>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Purchase location" />
                <TextField fx:id="textFieldPurchaseLocation" prefWidth="200.0" />
               </children>
            </VBox>
            <VBox spacing="2.0">
               <children>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Price in DKK" />
                <TextField fx:id="textFieldPriceInDKK" prefWidth="200.0" />
               </children>
            </VBox>
            <VBox spacing="2.0">
               <children>
                <Text id="textFieldItemName" strokeType="OUTSIDE" strokeWidth="0.0" text="Note" />
                <TextField fx:id="textFieldNote" prefWidth="200.0" />
               </children>
            </VBox>
          <Button fx:id="buttonAddItem" mnemonicParsing="false" onAction="#saveItemBtnAction" text="Add Item" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
  </children>
</AnchorPane>
